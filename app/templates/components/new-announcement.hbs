{{#if addNewAnnouncement}}
  <div>
    <form>
      <div class="form-group">
        <label for="date">Day of the Week</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="news">News</label>
        {{input value=news id="news"}}
      </div>

      <div class="form-group">
        <label for="weather">Weather</label>
        {{input value=weather id="weather"}}
      </div>

      <div class="form-group">
        <label for="sales">Sales</label>
        {{input value=sales id="sales"}}
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Annoucement</button>
{{/if}}
